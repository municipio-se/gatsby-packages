    "format:prettier": "prettier --write '**/*.{js,jsx,json,md,mdx,yml,html,css}'"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-react": "^7.25.1",
    "jest": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0"
  }
}
